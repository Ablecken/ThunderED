                                                <RadzenLabel Text="@(order.Where)" />
                                            </Template>
                                        </RadzenGridColumn>
                                    </Columns>
                                </RadzenGrid>
                                @if (_isWalletTransLoading)
                                {
                                    <RadzenLabel Text="@LM.Get("webLoading")" Class="hrmLoadingTabText" />
                                }
                            </RadzenTabsItem>
                        }
                        @if (SettingsManager.HasCharSkillsScope(_character?.DataView.PermissionsList) && _hasToken)
                        {
